{"cells": [{"cell_type": "code", "execution_count": null, "metadata": {}, "outputs": [], "source": ["import numpy as np\nimport matplotlib.pyplot as plt\nfrom matplotlib.widgets import Slider\n\n# Create a function for the phase diagram\ndef phase_diagram(temperature, pressure):\n    # Sample phase data\n    phases = {"Solid": (0, 50), "Liquid": (50, 100), "Gas": (100, 200)}\n    for phase, (t_min, t_max) in phases.items():\n        if temperature >= t_min and temperature < t_max:\n            return phase\n    return "Unknown"\n\n# Interactive visualization\nfig, ax = plt.subplots()\nplt.subplots_adjust(bottom=0.25)\n\n# Initial parameters for the diagram\ntemperature = 75\npressure = 1\nphase = phase_diagram(temperature, pressure)\n\n# Plotting the phase diagram\nsc = ax.scatter(temperature, pressure, c='blue')\nax.set_xlabel('Temperature (Â°C)')\nax.set_ylabel('Pressure (atm)')\nax.set_xlim(0, 200)\nax.set_ylim(0, 10)\n\n# Slider for temperature\naxcolor = 'lightgoldenrodyellow'\nax_temp = plt.axes([0.1, 0.1, 0.65, 0.03], facecolor=axcolor)\nslider_temp = Slider(ax_temp, 'Temperature', 0, 200, valinit=temperature)\n\n# Update function for slider\ndef update(val):\n    temp = slider_temp.val\n    phase = phase_diagram(temp, pressure)\n    ax.set_title(f'Phase: {phase}')\n    fig.canvas.draw_idle()\n\nslider_temp.on_changed(update)\nplt.show()"}], "metadata": {}, "nbformat": 4, "nbformat_minor": 2}